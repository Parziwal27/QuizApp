<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizPage4"
    android:background="@drawable/img_1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewhello4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="#FFEB3B"
            android:layout_margin="10dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textViewhelloname4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#FFEB3B"
            android:layout_margin="10dp"
            android:textSize="30dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewQuestion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="Which of the following is correct way of importing an entire package
    ‘pkg’?"
        android:textColor="#040404"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioButton4a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import pkg"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton4b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="import pkg*"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton4c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import pkg*"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton4d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import pkg"
            android:layout_marginLeft="40dp"/>
    </RadioGroup>
    <TextView
        android:id="@+id/textViewcorrect4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct"
        android:textColor="#FFEB3B"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/buttonnextquestion4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#EF1C1C"
        />

    <Button
        android:id="@+id/buttonQuit4"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#EF1C1C"
        android:text="Quit" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewscore4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score :"
            android:textSize="30dp"
            android:layout_margin="40dp"/>

        <TextView
            android:id="@+id/textViewscorecal4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="TextView"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>