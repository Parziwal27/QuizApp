<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizPage"
    android:background="@drawable/img_1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewhello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="#FFEB3B"
        android:layout_margin="10dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textViewhelloname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="#FFEB3B"
        android:layout_margin="10dp"
        android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewQuestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="Which method can be defined only once in a program?"
        android:textColor="#040404"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="finalize method"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="main method"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Static method"
            android:layout_marginLeft="40dp"/>

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Method"
            android:layout_marginLeft="40dp"/>
    </RadioGroup>
    <TextView
        android:id="@+id/textViewcorrect1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correct"
        android:textColor="#FFEB3B"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/buttonnextquestion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Question"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="#EF1C1C"
        />

    <Button
        android:id="@+id/buttonQuit"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#EF1C1C"
        android:text="Quit" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textViewscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score :"
        android:textSize="30dp"
        android:layout_margin="40dp"/>

        <TextView
            android:id="@+id/textViewscorecal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:text="TextView"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>